{
  "name": "preact-async",
  "amdName": "preactAsync",
  "version": "0.1.0",
  "private": true,
  "description": "Async rendering addon for Preact",
  "main": "dist/async.js",
  "module": "dist/async.module.js",
  "umd:main": "dist/async.umd.js",
  "source": "src/index.js",
  "license": "MIT",
  "types": "src/index.d.ts",
  "scripts": {
    "build": "microbundle build --raw",
    "dev": "microbundle watch --raw --format cjs",
    "test": "npm-run-all build --parallel test:karma",
    "test:karma": "karma start test/karma.conf.js --single-run",
    "test:karma:watch": "karma start test/karma.conf.js --no-single-run"
  },
  "peerDependencies": {
    "preact": "^10.6.4"
  },
  "mangle": {
    "regex": "^_"
  }
}
